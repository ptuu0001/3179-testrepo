{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Happiness of the World (Chart)",
  "width": 1000,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/ptuu0001/3179-testrepo/main/Assignment%202/data/2019.csv"
  },
  "encoding": {
    "x": {
      "aggregate": "sum",
      "field": "Score",
      "type": "quantitative",
      "scale": { "domain": [0, 8.5] },
      "title": "Happiness Score"
    },
    "y": {
      "field": "Country or region",
      "type": "nominal",
      "sort": "-x"
    },
    "tooltip": [
      {
        "field": "Country or region",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "Score",
        "type": "quantitative",
        "title": "Happiness Score",
        "format": ".2f"
      }
    ]
  },
  "transform": [
    {
      "window": [
        {
          "op": "rank",
          "as": "rank"
        }
      ],
      "sort": [{ "field": "Score", "order": "descending" }]
    },
    { "filter": "datum.Score <= Score_Below" },
    { "filter": "datum.Score >= Score_Above" },
    {
      "calculate": "'Australia score: ' + datum['Score']",
      "as": "aust_annotation"
    }
  ],
  "layer": [
    {
      "mark": { "type": "bar" },
      "encoding": {
        "color": {
          "value": "#68C2DB"
        }
      }
    }
  ],
  "params": [
    {
      "name": "Score_Below",
      "value": 8,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 8,
        "step": 0.5,
        "name": "Maximum Happiness Score: "
      }
    },
    {
      "name": "Score_Above",
      "value": 6.5,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 8,
        "step": 0.5,
        "name": "Minimum Happiness Score: "
      }
    }
  ]
}
