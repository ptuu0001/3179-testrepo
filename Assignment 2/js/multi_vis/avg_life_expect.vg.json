{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average Life Expectancy",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/ptuu0001/3179-testrepo/main/Assignment%202/data/Life%20expectancy%20(217%20years)%20%20No%20countries.csv"
  },
  "transform": [
    {
      "window": [
        {
          "field": "Life expectancy",
          "op": "mean",
          "as": "life_expect_avg"
        }
      ],
      "frame": [-15, 15]
    }
  ],
  "encoding": {
    "x": { "field": "Year", "timeUnit": "year", "title": "Year" },
    "y": {
      "type": "quantitative",
      "axis": { "title": "Life Expectancy (in years)" }
    }
  },
  "layer": [
    {
      "mark": { "type": "point", "color": "red", "size": 1 },
      "encoding": {
        "y": {
          "field": "life_expect_avg",
          "title": "Rolling Mean of Max Temperature"
        },
        "tooltip": [{ "field": "Life expectancy", "type": "quantitative" }]
      }
    }
  ]
}
