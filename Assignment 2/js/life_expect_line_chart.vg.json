{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Life Expectancy Overtime",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/ptuu0001/3179-testrepo/main/Assignment%202/data/Life%20expectancy%20(217%20years).csv"
  },
  "params": [
    {
      "name": "country_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Australia",
          "Brazil",
          "Canada",
          "China",
          "France",
          "Germany",
          "India",
          "Italy",
          "Japan",
          "Mexico",
          "Russia",
          "Spain",
          "Switzerland",
          "United Kingdom",
          "United States"
        ],
        "labels": [
          "Show All",
          "Australia",
          "Brazil",
          "Canada",
          "China",
          "France",
          "Germany",
          "India",
          "Italy",
          "Japan",
          "Mexico",
          "Russia",
          "Spain",
          "Switzerland",
          "United Kingdom",
          "United States"
        ],
        "name": "Country selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "country_selection == null || datum.Entity == country_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "Year",
      "title": "Year",
      "type": "temporal"
    },
    "y": {
      "field": "Life expectancy",
      "title": "Life expectancy (in years)",
      "type": "quantitative"
    },
    "color": {
      "condition": {
        "param": "hover",
        "field": "Entity",
        "type": "nominal"
      },
      "value": "grey"
    },
    "opacity": {
      "condition": {
        "param": "hover",
        "value": 1
      },
      "value": 0.2
    }
  },
  "config": { "legend": { "offset": 90, "title": null } },
  "layer": [
    {
      "params": [
        {
          "name": "hover",
          "select": { "type": "point", "fields": ["Entity"], "on": "click" }
        }
      ],
      "mark": {
        "type": "line",
        "strokeWidth": 15,
        "stroke": "transparent",
        "selection": {
          "continent_highlight": {
            "type": "multi",
            "fields": ["Entity"],
            "bind": "legend"
          }
        }
      }
    },
    { "mark": "line" },
    {
      "encoding": {
        "x": { "aggregate": "max", "field": "Year" },
        "y": { "aggregate": { "argmax": "Year" }, "field": "Life expectancy" }
      },
      "layer": [
        { "mark": { "type": "circle" } },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "dx": 4
          },
          "encoding": {
            "text": { "field": "Entity", "type": "nominal" },

            "opacity": {
              "condition": {
                "param": "hover",
                "value": 1
              },
              "value": 0
            }
          }
        }
      ]
    },
    {
      "mark": { "type": "line" },
      "encoding": {
        "x": { "timeUnit": "year", "field": "Year" },
        "y": { "aggregate": "average", "field": "Life expectancy" },
        "opacity": {
          "condition": { "selection": "country_selection", "value": 1 },
          "value": 0
        }
      }
    }
  ]
}
